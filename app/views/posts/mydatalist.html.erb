<h1>List of all data:</h1>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @post.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show',myshowdata_post_path(post) %></td>
        <td><%= link_to 'Edit', myedit_post_path(post) %></td>
        <td><%= link_to 'Delete', mydelete_post_path(post), :data => { :confirm => 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<br />
<%= will_paginate @post %>
 <br />
<%= link_to 'Add data', myform_posts_path %>
