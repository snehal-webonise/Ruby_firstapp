<h3>Please Enter the details</h3>

<%= form_for(@post,:url=> mycreate_posts_path) do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>  <br/>
    </div> <br />

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
